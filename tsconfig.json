{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": [
      "./declarations/",
      "./node_modules/@types",
    ],
    "paths": {
      "*": [
          "src/*",
          "declarations/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "index.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}